      <Text>Look at that portrait!</Text>
      <GiveTags>portraitShown</GiveTags>
    </Interaction>
    <Interaction>
      <Name>firstmate_give_mop_fail</Name>
      <Type>UseItem</Type>
      <ALLTags>firstmateQuestInProgress1|holdingMopHead</ALLTags>
      <NONETags>portraitShown</NONETags>
      <Image>FirstmatePortrait</Image>
      <Text>(Firstmate dialogue)</Text>
      <SpecialActions>ReturnSelected</SpecialActions>
    </Interaction>
    <Interaction>
      <Name>firstmate_give_mop_success</Name>
      <Type>UseItem</Type>
      <ALLTags>firstmateQuestInProgress1|holdingMopHead|portraitShown</ALLTags>
      <Image>FirstmatePortrait</Image>
      <Text>(Firstmate dialogue)</Text>
      <Next>firstmate_finish_quest_01</Next>
    </Interaction>
    <Interaction>
      <Name>firstmate_finish_quest_01</Name>
      <Type>Derivative</Type>
      <TakeTags>firstmateQuestInProgress1</TakeTags>
      <TakeItems>Mop_Head</TakeItems>
      <Image>FirstmatePortraitMop</Image>
      <Text>(Firstmate dialogue)</Text>
      <SpecialActions>ChangeToMop</SpecialActions>

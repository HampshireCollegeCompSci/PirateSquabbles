  <!-- Region Firstmate Quest -->
    <Interaction>
      <Name>firstmate_quest</Name>
      <Type>Click</Type>
      <ALLTags>firstmateQuestInProgress1</ALLTags>
      <Image>FirstmatePortrait</Image>
      <Text>(Firstmate dialogue)</Text>
    </Interaction>
    <Interaction>
      <Name>firstmate_quest</Name>
      <Type>Click</Type>
      <ALLTags>firstmateQuestInProgress1|portraitPainted</ALLTags>

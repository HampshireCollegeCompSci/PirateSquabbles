<?xml version="1.0" encoding="utf-8"?>
<InteractionList>
  <Interactions>
    <Interaction>
      <Name>prism_puzzle_start</Name>
      <Type>Click</Type>
      <ALLTags>intro</ALLTags>
      <NONETags>prism_puzzle_started|prism_puzzle_complete</NONETags>
      <Text>Find some things to turn me TEAL.</Text>
      <Image>prism</Image>
      <GiveTags>prism_puzzle_started</GiveTags>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_not_done</Name>
      <Type>Click</Type>
      <ALLTags>prism_puzzle_started</ALLTags>
      <NONETags>prism_puzzle_complete</NONETags>
      <Text>You still need to make me TEAL. I wonder how you make the color teal...</Text>
      <Image>prism</Image>
      <TextType>Monologue</TextType>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_2_start</Name>
      <Type>Click</Type>
      <ALLTags>prism_puzzle_complete</ALLTags>
      <NONETags>prism_puzzle_2_started</NONETags>
      <Text>You made me TEAL! Good job. Now, make me a sandwich, please.</Text>
      <Image>turquoise</Image>
      <GiveTags>prism_puzzle_2_started</GiveTags>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_2_not_done</Name>
      <Type>Click</Type>
      <ALLTags>prism_puzzle_2_started</ALLTags>
      <NONETags>prism_puzzle_2_complete</NONETags>
      <Text>I still need that sandwich...</Text>
      <Image>turquoise</Image>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_use_wrong_item_basic</Name>
      <Type>UseItem</Type>
      <ALLTags>prism_puzzle_started</ALLTags>
      <NONETags>hold_teal|hold_red|hold_purple|hold_orange</NONETags>
      <Text>That's not teal...</Text>
      <Image>prism</Image>
      <SpecialActions>ReturnSelected</SpecialActions>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_use_wrong_item_red_or_purple</Name>
      <Type>UseItem</Type>
      <ALLTags>prism_puzzle_started</ALLTags>
      <ANYTags>hold_red|hold_purple|hold_orange</ANYTags>
      <NONETags>prism_puzzle_complete</NONETags>
      <Text>That's REALLY not teal...</Text>
      <Image>prism</Image>
      <Next>prism_puzzle_fix_colors</Next>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_fix_colors</Name>
      <Type>Derivative</Type>
      <ALLTags>prism_puzzle_started|hold_purple</ALLTags>
      <NONETags>prism_puzzle_complete</NONETags>
      <Text>Why do you even have purple!? Let me fix that for you...</Text>
      <Image>purple</Image>
      <TakeItems>purple_circle</TakeItems>
      <GiveItems>blue_circle|red_circle</GiveItems>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_fix_colors</Name>
      <Type>Derivative</Type>
      <ALLTags>prism_puzzle_started|hold_red</ALLTags>
      <NONETags>prism_puzzle_complete</NONETags>
      <SpecialActions>ReturnSelected</SpecialActions>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_fix_colors</Name>
      <Type>Derivative</Type>
      <ALLTags>prism_puzzle_started|hold_orange</ALLTags>
      <NONETags>prism_puzzle_complete</NONETags>
      <Text>Why do you even have orange!? Let me fix that for you...</Text>
      <Image>orange</Image>
      <TakeItems>orange_circle</TakeItems>
      <GiveItems>red_circle|yellow_circle</GiveItems>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_use_right_item</Name>
      <Type>UseItem</Type>
      <ALLTags>prism_puzzle_started|hold_teal</ALLTags>
      <NONETags>prism_puzzle_complete</NONETags>
      <Text>Oh wow! That's TEAL alright. Thanks!</Text>
      <Image>prism</Image>
      <TakeTags>Take these tags from the player.</TakeTags>
      <GiveTags>prism_puzzle_complete</GiveTags>
      <TakeItems>teal_circle</TakeItems>
      <SpecialActions>ChangeToTeal</SpecialActions>
      <Next>prism_puzzle_end</Next>
    </Interaction>
    <Interaction>
      <Name>prism_puzzle_end</Name>
      <Type>Derivative</Type>
      <Text>All that color changing made me hungry...</Text>
      <Image>turquoise</Image>
    </Interaction>
    <Interaction>
      <Name>DefaultTooFar</Name>
      <Type>Derivative</Type>
      <Text>Maybe I should go closer...</Text>
    </Interaction>
    <Interaction>
      <Name>DefaultCannotUse</Name>
      <Type>Derivative</Type>
      <Text>I cannot use this item now.</Text>
      <Image></Image>
      <SpecialActions>ReturnSelected</SpecialActions>
    </Interaction>
  </Interactions>
</InteractionList>